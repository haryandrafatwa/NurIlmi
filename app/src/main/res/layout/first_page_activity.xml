<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/logo_choose_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_logo_first_page"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="32dp"/>

        <Button
            android:id="@+id/btn_daftar_first_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="daftar"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/nunito_bold"
            android:textSize="24sp"
            android:background="@drawable/bg_btn_stroke_white"
            android:textColor="@android:color/white"
            android:layout_below="@id/logo_choose_method"
            android:layout_marginTop="64dp"/>

        <Button
            android:id="@+id/btn_masuk_first_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="masuk"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/nunito_bold"
            android:textSize="24sp"
            android:background="@drawable/bg_btn_solid_white"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:layout_below="@id/btn_daftar_first_page"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>