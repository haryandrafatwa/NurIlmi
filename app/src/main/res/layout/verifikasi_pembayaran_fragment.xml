<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_metode_pembayaran"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp">

            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_chevron_left"
                android:backgroundTint="@android:color/white"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi Pembayaran"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20sp"
                android:textAllCaps="true"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/layout_mandiri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_btn_solid_white"
        android:padding="16dp"
        android:elevation="1dp"
        android:layout_below="@+id/toolbar_metode_pembayaran"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/layout_atas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Handphone"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipe Donasi"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nominal Donasi"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Rekening"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_nama_lengkap_donasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Ganteng"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"/>

                <TextView
                    android:id="@+id/tv_email_donasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="admin@test.com"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_phonenumber_donasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="081221098208"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_tipe_donasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kurban"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tv_tanggal_donasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selasa 31 Maret 2020, 18:00"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_nominal_donasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp10.000.000"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
            
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/layout_rekening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_atas"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/iv_bank_verifikasi"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_bank_mandiri"/>

            <TextView
                android:id="@+id/tv_username_verifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a/n Nur Ilmi"
                android:textColor="@android:color/black"
                android:fontFamily="@font/nunito_semibold"
                android:layout_toRightOf="@id/iv_bank_verifikasi"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_nomor_rekening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_stroke_blue"
            android:layout_below="@+id/layout_rekening"
            android:text="7009945678012345"
            android:padding="10dp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:elevation="10dp"
            android:textSize="28sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_verify_pembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_solid_blue"
            android:layout_below="@+id/tv_nomor_rekening"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:elevation="10dp"
            android:textSize="20sp"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>

</RelativeLayout>