<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_metode_pembayaran"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menunggu Konfirmasi"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="20sp"
                    android:textAllCaps="true"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/layout_mandiri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_btn_solid_white"
            android:padding="16dp"
            android:elevation="1dp"
            android:layout_below="@+id/toolbar_metode_pembayaran"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/layout_atas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="12">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. Handphone"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipe Donasi"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nominal Donasi"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Rekening"
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tv_nama_lengkap_donasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"/>

                    <TextView
                        android:id="@+id/tv_email_donasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_phonenumber_donasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_tipe_donasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_tanggal_donasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_nominal_donasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@android:color/black"
                        android:fontFamily="@font/nunito_semibold"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_atas"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/iv_bank_verifikasi"
                    android:layout_width="100dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:id="@+id/tv_username_verifikasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a/n Nur Ilmi"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_toRightOf="@id/iv_bank_verifikasi"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_nomor_rekening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_stroke_blue"
                android:layout_below="@+id/layout_rekening"
                android:text=""
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:elevation="10dp"
                android:textSize="28sp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"/>

            <RelativeLayout
                android:id="@+id/layout_konfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nomor_rekening"
                android:visibility="gone">

                <TextView
                    android:id="@+id/deskrpisi_konfirmasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pembayaran anda telah dikonfirmasi oleh pihak kami"
                    android:fontFamily="@font/nunito_semibold"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/btn_lanjutkan_konfirmasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_solid_blue"
                    android:layout_below="@+id/deskrpisi_konfirmasi"
                    android:text="Lanjutkan"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:elevation="10dp"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/separator"
                android:layout_below="@+id/layout_konfirmasi"
                android:layout_marginTop="32dp"/>

            <TextView
                android:id="@+id/petunjuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Petunjuk"
                android:fontFamily="@font/nunito_semibold"
                android:layout_below="@id/separator"
                android:layout_centerVertical="true"
                android:layout_marginTop="32dp"/>

            <RelativeLayout
                android:id="@+id/layout_petunjuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/petunjuk"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/n1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:fontFamily="@font/nunito_semibold"/>

                <TextView
                    android:id="@+id/p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silahkan lakukan pembayaran via transfer pada rekening diatas."
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_toRightOf="@id/n1"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:id="@+id/n2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2."
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_below="@id/p1"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tunggu sesaat sampai pembayaran berhasil dikonfirmasi"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_below="@id/p1"
                    android:layout_toRightOf="@id/n1"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/n3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3."
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_below="@id/p2"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/p3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akan muncul notifikasi jika pembayaran kamu berhasil dikonfirmasi"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_below="@id/p2"
                    android:layout_toRightOf="@id/n2"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"/>


                <TextView
                    android:id="@+id/n4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4."
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_below="@id/p3"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/p4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buka notifikasi tersebut maka kamu telah selesai donasi"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_below="@id/p3"
                    android:layout_toRightOf="@id/n3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>